@*@model string[]*@
@{
    ViewBag.Title = "list";
    var newslist = ViewBag.data as string[];

    var curpage = (int)ViewBag.Page;
    var start = curpage - 3;



}

<h2>list</h2>
<h3>第 @ViewBag.Page 页</h3>

<ol>
    @foreach (var item in newslist)
    {
        <li>@item</li>
    }
</ol>
<ol>
    @for (int i = 0; i < newslist.Length; i++)
    {<li>@newslist[i]</li>
    }
</ol>
<ol>
    @for (int i = start; i < curpage+3; i++)
    {
    <li>
       @* <a href="/Home/List?page=@i">第 @i 页</a>*@
        @Html.ActionLink(string.Format("第{0}页", i),"list", "Home", new { page=i },null)
    </li>
    }
</ol>
